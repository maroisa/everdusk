[sub_resource type="Shader" id=4]
code = "shader_type canvas_item;

uniform float intensity = 1.0;
uniform float softness = 0.5;

void fragment() {
    // Calculate the distance from the center (0.5, 0.5)
    float distance_from_center = distance(UV, vec2(0.5));
    
    // Create the vignette mask using smoothstep
    // The mask will be 0.0 at the center and 1.0 at the edges
    float vignette = smoothstep(0.5 - softness, 0.5 + softness, distance_from_center * intensity);
    
    // Apply the vignette to the alpha channel of the ColorRect
    COLOR = vec4(0.0, 0.0, 0.0, vignette);
}"

